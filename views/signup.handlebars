<form id="signup-form">
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input id="email-signup" class="input" type="text" placeholder="Email" autofocus="true">
        </div>
    </div>
    <div class="field">
        <label class="label">Username</label>
        <div class="control">
            <input id="username-signup" class="input" type="text" placeholder="Username" autofocus="true">
        </div>
    </div>
    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input id="password-signup" class="input" type="text" placeholder="Password" autofocus="true">
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link">Submit</button>
        </div>
    </div>
</form>
<script src="/js/signup.js"></script>